# API Configuration
ATS_API_URL=https://api.example.com/v1
ATS_API_KEY=your_api_key_here
API_BATCH_SIZE=100
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=5

# Processing Settings
BATCH_SIZE=50
MAX_WORKERS=4
MEMORY_LIMIT_MB=2048
PROCESSING_TIMEOUT=300

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/resume_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Model Configuration
SPACY_MODEL=en_core_web_trf
NER_MODEL=dslim/bert-base-NER
SKILL_MODEL=jjzha/jobbert-base-cased
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# OCR Configuration
TESSERACT_CMD=tesseract
TESSERACT_LANG=eng
OCR_TIMEOUT=30

# File Processing
SUPPORTED_FORMATS=pdf,doc,docx,txt
MAX_FILE_SIZE_MB=10
TEMP_DIR=temp

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/resume_parser.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=60
METRICS_FILE=logs/metrics.json

# Error Handling
ERROR_RETRY_ATTEMPTS=3
ERROR_RETRY_DELAY=5
ERROR_LOG_FILE=logs/errors.log

# Security
ENCRYPTION_KEY=your_encryption_key_here
SSL_VERIFY=true
SSL_CERT_PATH=certs/cert.pem

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_DIR=cache

# Output Configuration
OUTPUT_FORMAT=json
OUTPUT_DIR=data/output
ERROR_DIR=data/errors
BACKUP_DIR=data/backup

# Feature Flags
ENABLE_OCR=true
ENABLE_NLP=true
ENABLE_SKILL_EXTRACTION=true
ENABLE_EXPERIENCE_CALCULATION=true
ENABLE_CONFIDENCE_SCORING=true